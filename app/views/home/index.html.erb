<div class="jumbotron text-center">
  <h3>Hello, Welcome to my blog</h3>
</div>

<div class="row">
<% @posts.each do |post| %>
<div class="col-sm-4">
  <h2><%= post.title %></h2>
  <p><%= truncate(post.content, length: 100) %></p>
  <%= link_to 'Read more', post_path(post) %>
</div>
<% end %>
</div>